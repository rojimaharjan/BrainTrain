<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DurationFragment"
    android:orientation="vertical"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_bar"
            style="@style/Widget.Shrine.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingEnd="12dp"
            android:paddingRight="0dp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@string/duration" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/StartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/StartDate"
        style="@style/TextAppearance.Shrine.TextLabel"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/StartDateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="05.08.2020"
        style="@style/TextAppearance.Shrine.TextInputLayout.HintText"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioduration"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:checkedButton="@id/noenddate">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:id="@+id/noenddate"
            android:layout_height="wrap_content"
            android:text="@string/Noenddate"
            android:layoutDirection="rtl"
            android:buttonTint="@color/colorPrimary"
            android:enabled="true"
            android:focusedByDefault="true"
            style="@style/TextAppearance.Shrine.TextLabel"
            />
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="1dp"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/unitldate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Shrine.TextLabel"
            android:text="@string/Untildate"
            android:layoutDirection="rtl"
            android:buttonTint="@color/colorPrimary"/>
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="1dp"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/forXdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ForXdays"
            style="@style/TextAppearance.Shrine.TextLabel"
            android:layoutDirection="rtl"
            android:buttonTint="@color/colorPrimary"/>
        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="1dp"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/durationExtra"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


    </RelativeLayout>



